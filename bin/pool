#!/usr/bin/ruby
require 'rubygems'
require 'pool_party'

# Set defaults
list = PoolParty::Optioner.parse(ARGV.dup)
options = PoolParty.options(:optsparse => 
  {:banner => "Usage: #{op.program_name} [OPTIONS] {start | stop | list | maintain | restart}"  })
master = PoolParty::Master.new

case list[0]
when "start"
  PoolParty.message "Starting cloud"
  master.start_cloud!
when "stop"
  PoolParty.message "Stopping cloud"
  master.request_termination_of_all_instances  
when "list"
  puts master.list
when "maintain"
  PoolParty.message "Maintaining cloud"
  master.start_monitor!
when "restart"
  PoolParty.message "Restarting cloud"
  master.request_termination_of_all_instances
  master.start_cloud!
else
  puts master.list
end